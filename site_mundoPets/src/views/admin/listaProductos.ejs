<!DOCTYPE html>
<html lang="es">
 <%- include('../partials/head',{title:"Administrador"}) %> 
<body>

  <%- include('../partials/header') %> 
    <main class="admin">
        <h1>Admin</h1>
        <a href="/admin/crear">
            <button type="button" class="btn btn-primary">Crear Producto</button>
        </a>

        <div class="table-responsive">
        <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Marca</th>
                <th scope="col">Nombre producto</th>
                <th scope="col">Categoria</th>
                <th scope="col">Subcategoria</th>
                <th scope="col">Stock</th>
                <th scope="col">Precio</th>
                <th scope="col">Des</th>
                <th scope="col">Accion</th>
              </tr>
            </thead>
            <tbody>
                <% productos.forEach(producto => { %>
                  <tr>
                      
                        <th scope="row"><a href="/admin/editar/<%= producto.id %>"><%= producto.id %> </a></th>
                        <td><a href="/admin/editar/<%= producto.id %> "><%= producto.productosMarca ? producto.productosMarca.nombre : "no definida" %></a></td>
                        <td><a href="/admin/editar/<%= producto.id %> "><%= producto.titulo %></a></td>
                        <td><a href="/admin/editar/<%= producto.id %> "><%= producto.categoria.nombre %></a></td>
                        <td><a href="/admin/editar/<%= producto.id %> "><%= producto.subcategoria ? producto.subcategoria.nombre : "no definida" %></a></td>
                        <td><a href="/admin/editar/<%= producto.id %> "><%= producto.stock %></a></td>
                        <td><a href="/admin/editar/<%= producto.id %> "><%= producto.precio %></a></td>
                        <td><a href="/admin/editar/<%= producto.id %> "><%= producto.descuento %></a></td>
                        <td>
                          <div>
                           
                              <a href="/admin/editar/<%= producto.id%>">
                                <button type="button" class="btn btn-success"><i class="fas fa-edit"></i></button>
                              </a>
                                <form action="/admin/eliminar/<%= producto.id%>?_method=DELETE" method="post">
                                  <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                                </form>
                          
                               
                             
                          </div>  
                        </td>
                      
                      </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>